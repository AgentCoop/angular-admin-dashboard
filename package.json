{
  "name": "angular-desktop-ui",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "concurrently --kill-others \"npm run watch:worker\" \"ng serve --hmr --host 0.0.0.0 --poll 1000\"",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:worker": "cross-env NODE_ENV=production npx webpack --config webpack.config.worker.js",
    "build:worker:dev": "cross-env NODE_ENV=development npx webpack --config webpack.config.worker.js",
    "build:worker:analyze": "cross-env NODE_ENV=production ANALYZE=true npm run build:worker",
    "build:all": "npm run build:worker && npm run build",
    "watch:worker": "cross-env NODE_ENV=development npx webpack --config webpack.config.worker.js --watch"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "centrifuge": "^5.5.3",
    "jwt-decode": "^4.0.0",
    "lodash-es": "^4.17.22",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^13.0.0",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^21.0.3",
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/lodash-es": "^4.17.12",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "webpack-bundle-analyzer": "^5.2.0",
    "webpack-cli": "^6.0.1"
  }
}

{
  "http_server" : {
    "port": "8000"
  },
  "proxies": [
    {
      "name": "pub_proxy"
    }
  ],
  "channel": {
    "without_namespace": {
      "presence": true,
      "history_size": 10,
      "history_ttl": "300s",
      "force_recovery": true,
      "allow_subscribe_for_anonymous": true,
      "allow_subscribe_for_client": true,
      "allow_presence_for_anonymous": true,
      "allow_presence_for_subscriber": true,
      "allow_history_for_anonymous": true,
      "allow_history_for_subscriber": true
    },
    "namespaces": [
      {
        "name": "chat-typings",
        "presence": true,
        "history_size": 100,
        "history_ttl": "600s",
        "force_recovery": true,
        "allow_subscribe_for_anonymous": true,
        "allow_subscribe_for_client": true,
        "allow_presence_for_anonymous": true,
        "allow_presence_for_subscriber": true,
        "allow_history_for_anonymous": true,
        "allow_history_for_subscriber": true
      },
      {
        "name": "chat-commands",
        "presence": false,
        "history_size": 0,
        "history_ttl": "0s",
        "force_recovery": false,

        "publish_proxy_enabled": true,
        "publish_proxy_name": "pub_proxy",

        "allow_subscribe_for_anonymous": true,
        "allow_subscribe_for_client": true,
        "allow_presence_for_anonymous": false,
        "allow_presence_for_subscriber": false,
        "allow_history_for_anonymous": false,
        "allow_history_for_subscriber": false
      }
    ]
  },
  "usage_stats": {
    "disabled": true
  },
  "client": {
    "allow_anonymous_connect_without_token": true,
    "insecure": true
  }
}
